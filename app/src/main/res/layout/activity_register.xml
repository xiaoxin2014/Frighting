<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/out"
            android:padding="10dp"
            android:src="@mipmap/back_tab_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="注册"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/ec"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <EditText
        android:id="@+id/number"
        android:hint="请输入手机号"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/code"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_color_black"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/get_code"
            android:background="@drawable/text_color_orange"
            android:layout_width="90dp"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="40dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/pwd"
        android:hint="6-16位数字或字母"
        android:textSize="14sp"
        android:password="true"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/s_pwd"
        android:hint="请确认密码"
        android:password="true"
        android:layout_margin="15dp"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_color_black"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/yaoq"
        android:hint="邀请人注册码（如果没有可不填）"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/commit"
        android:enabled="false"
        android:textColor="@android:color/white"
        android:text="提交"
        android:background="@drawable/edittext_color_orange"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="同意"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/click"
            android:id="@+id/tv_b"
            android:text=" 《用户注册协议》"
            android:textColor="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>