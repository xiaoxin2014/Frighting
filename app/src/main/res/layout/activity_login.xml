<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="18dp"
        android:background="@android:color/holo_orange_light"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/out"
            style="@style/click"
            android:src="@mipmap/white_fh_icon"
            android:layout_width="40dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="11dp"
            android:id="@+id/title"
            android:text="登录"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/click"
            android:id="@+id/register"
            android:text="注册"
            android:layout_marginTop="11dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:background="@drawable/linearlayout_color_white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_marginTop="70dp"
            android:background="@drawable/linearlayout_color_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/zh_icon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/number"
                android:hint="请输入手机号码"
                android:padding="13dp"
                android:background="@null"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/linearlayout_color_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/mm_icon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="20dp" />
            <EditText
                android:password="true"
                android:id="@+id/password"
                android:hint="6-16位数字或字母"
                android:padding="13dp"
                android:background="@null"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
    <TextView
    android:id="@+id/tv_msg"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/ll"
    android:text="使用短信验证码登录"
    android:gravity="center_horizontal"
    android:textColor="@android:color/holo_blue_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/tv_msg"
        android:layout_marginTop="50dp"
        android:id="@+id/login"
        android:textColor="@android:color/white"
        android:text="登录"
        android:background="@drawable/edittext_color_orange"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/forgetpassword"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/login"
        android:text="忘记密码"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@android:color/holo_orange_light"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bingdao"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />
</RelativeLayout>